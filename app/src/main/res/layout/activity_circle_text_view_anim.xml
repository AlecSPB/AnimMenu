<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.zpf.animmenu.CircleTextViewAnim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_gravity="right"
            android:layout_width="300dp"
            android:layout_height="300dp">

            <customview.CircleTextView
                android:id="@+id/ctv_one"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="平安银行100010110110"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:circleTextAlpha="20"
                app:circleRotationCW="true"
                app:circleRotationTime="4000"/>

            <customview.CircleTextView
                android:id="@+id/ctv_two"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="11100101平安银行（000001）"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:circleTextAlpha="120"
                app:circleRotationCW="false"
                app:circleRotationTime="3800"/>

            <customview.CircleTextView
                android:id="@+id/ctv_three"
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="平安11100101银行（000001）"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:circleTextAlpha="160"
                app:circleRotationCW="false"
                app:circleRotationTime="3200"/>

            <customview.CircleTextView
                android:id="@+id/ctv_four"
                android:layout_centerInParent="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="平安银行11100101（000001）"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:circleTextAlpha="120"
                app:circleRotationCW="true"
                app:circleRotationTime="4600"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_anim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/anim_start"
                android:background="@drawable/shape_btn_corners"/>

            <Button
                android:id="@+id/btn_cancel_anim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/anim_cancel"
                android:background="@drawable/shape_btn_corners"/>
        </LinearLayout>

        <!-- 测试渐变的TextView -->
        <TextView
            android:id="@+id/tv_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="起来，不远睡懒觉的人们"/>

        <TextView
            android:id="@+id/tv_part_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="我必须要来个换行回答内容见详细部分...点击查看>>"/>
    </LinearLayout>

</ScrollView>
