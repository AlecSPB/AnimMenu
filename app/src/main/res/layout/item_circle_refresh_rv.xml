<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/card_item_default_elevation"
    app:cardUseCompatPadding="false"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_drag"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:padding="12dp"
            android:tint="@color/colorGrayDarkDark"
            android:src="@mipmap/ic_open_with_black_24dp" />

        <TextView
            android:id="@+id/tv_title_circle_refresh"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/iv_drag"
            android:layout_toStartOf="@+id/iv_drag"
            android:gravity="center_vertical" />


    </RelativeLayout>


</android.support.v7.widget.CardView>